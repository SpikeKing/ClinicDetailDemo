<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingBottom="2dp"
    android:paddingRight="@dimen/main_horizontal_margin"
    android:paddingTop="2dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:padding="@dimen/main_horizontal_margin"
        tools:ignore="RtlHardcoded">

        <ImageView
            android:id="@+id/star_hospital_iv_image"
            android:layout_width="100dp"
            android:layout_height="66dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/hospital_default"/>

        <TextView
            android:id="@+id/star_hospital_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_toRightOf="@id/star_hospital_iv_image"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:text="北京协和医院"/>

        <TextView
            android:id="@+id/star_hospital_tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/star_hospital_tv_title"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_toRightOf="@id/star_hospital_iv_image"
            android:paddingTop="2dp"
            android:textColor="#F76D07"
            android:textSize="12sp"
            tools:text="三甲医院"/>

        <TextView
            android:id="@+id/star_hospital_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/star_hospital_tv_level"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_toRightOf="@id/star_hospital_iv_image"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:textColor="#8D8D8D"
            android:textSize="12sp"
            tools:text="地址: 北京市海淀区学院路甲5号768创意园A座东区二层"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/related_diseases_iv_more"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@null"
        android:src="@drawable/more_arrow"/>

</LinearLayout>
